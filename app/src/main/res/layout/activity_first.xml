<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:padding="20dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:text="@string/minus"
                        android:textSize="70sp"
                        android:gravity="center"
                        android:background="@color/theme"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/white"
                        android:id="@+id/minus"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textSize="20sp"
                        android:padding="20dp"
                        android:id="@+id/no_of_teams"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        android:text="@string/no_of_team"
                        android:layout_height="wrap_content" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/no_of_teams"
                        android:textSize="20sp"
                        android:id="@+id/team_count"/>
                <TextView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentEnd="true"
                        android:textSize="70sp"
                        android:background="@color/theme"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="@string/plus"
                        android:id="@+id/plus"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:padding="20dp"
                android:layout_height="wrap_content">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:text="@string/minus"
                        android:textSize="70sp"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/theme"
                        android:layout_alignParentStart="true"
                        android:textColor="@color/white"
                        android:id="@+id/group_minus"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_alignParentTop="true"
                        android:textSize="20sp"
                        android:padding="20dp"
                        android:textStyle="bold"
                        android:id="@+id/no_of_groups"
                        android:layout_centerHorizontal="true"
                        android:text="@string/no_of_group"
                        android:layout_height="wrap_content" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/no_of_groups"
                        android:textSize="20sp"
                        android:id="@+id/group_count"/>
                <TextView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="10dp"
                        android:layout_alignParentEnd="true"
                        android:textSize="70sp"
                        android:background="@color/theme"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="@string/plus"
                        android:id="@+id/group_plus"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/theme"
            android:id="@+id/ok"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:text="@string/ok"/>
</RelativeLayout>